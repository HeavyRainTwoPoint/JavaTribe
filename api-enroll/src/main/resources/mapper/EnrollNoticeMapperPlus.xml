<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javatribe.apienroll.mapper.EnrollNoticeMapperPlus">
  <resultMap id="BaseResultMap" type="com.javatribe.apienroll.entity.EnrollNotice">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="content_file_url" jdbcType="VARCHAR" property="contentFileUrl" />
    <result column="direction_code" jdbcType="INTEGER" property="directionCode" />
    <result column="delete_mark" jdbcType="INTEGER" property="deleteMark" />
    <result column="gmt_created" jdbcType="TIMESTAMP" property="gmtCreated" />
    <result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified" />
  </resultMap>

  <sql id="Base_Column_List">
    id, title, content_file_url, direction_code, delete_mark, gmt_created, gmt_modified
  </sql>
  <select id="getEnrollNoticeAndDocxUrlOnDirection" resultType="com.javatribe.apienroll.dto.EnrollNoticeDTO"
          parameterType="java.lang.Integer">

    SELECT
            title,direction_code,content_file_url
    FROM
            enroll_notice a
    WHERE
            a.`direction_code` = #{direction_code} LIMIT 4

  </select>
</mapper>